@model JobSearcher.Job.GlassDoorJobSearch
@{
    ViewData["Title"] = "Jobs search";
}

<div class="text-center container flex-column">
    <div>
        <h1>Job Searches: </h1>
    </div>
    <p>
        <a class="btn btn-spoiler w-100 d-flex justify-content-between align-items-center border"
            data-bs-toggle="collapse" href="#glassDoorJobSearch" role="button" aria-expanded="false"
            aria-controls="glassDoorJobSearch">
            GlassDoor Job Search
            <span class="arrow">â–¼</span>
        </a>
    </p>
    <div class="collapse" id="glassDoorJobSearch">
        <div class="card card-body">
            <form id="glassDoorForm" asp-controller="Job" asp-action="GetGlassDoorJobs" method="get">
                <div class="mb-3">
                    <label asp-for="JobSearched" class="form-label"></label>
                    <input asp-for="JobSearched" class="form-control" placeholder="Job searched" />
                    <span asp-validation-for="JobSearched" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PlaceToLookFor" class="form-label"></label>
                    <input asp-for="PlaceToLookFor" class="form-control" placeholder="Place" />
                    <span asp-validation-for="PlaceToLookFor" class="text-danger"></span>
                </div>
                <div id="glassDoorJobError" class="alert alert-danger mt-2" style="display:none;"></div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
            <h2>Jobs Openings:</h2>
            <ul id="glassDoorJobs" class="jobOpening-list-small">
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $(document).on('submit', '#glassDoorForm', function (e) {
                e.preventDefault();
                var $form = $(this);

                if (!$form.valid()) return false;

                var url = $form.attr('action');
                $('#glassDoorJobError').hide();

                $.get(url, $form.serialize(), function (html) {
                    $('#glassDoorJobs').html(html);
                }).fail(function (xhr) {
                    var $errorDiv = $('#glassDoorJobError');
                    $errorDiv.empty().show();
                    if (xhr.status === 400 && xhr.responseJSON) {
                        var messages = [];
                        for (var key in xhr.responseJSON) {
                            messages = messages.concat(xhr.responseJSON[key]);
                        }
                        $errorDiv.html(messages.join('<br>'));
                    } else {
                        $errorDiv.text('Unexpected error fetching jobs.');
                    }
                });
            });
        });
    </script>
}
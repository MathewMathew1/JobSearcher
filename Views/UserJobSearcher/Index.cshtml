@using JobSearcher.JobOpening
@using JobSearcher.ViewModels
@model List<JobOpeningSearcherModel>
@{
    var glassDoorModel =
    new SearchSectionViewModel { Site = Site.GlassDoor, Searches = Model.Where(s => s.Site == Site.GlassDoor).ToList() };

    var indeedModel =
    new SearchSectionViewModel { Site = Site.Indeed, Searches = Model.Where(s => s.Site == Site.Indeed).ToList() };

    var praculPlModel =
    new SearchSectionViewModel { Site = Site.PracujPl, Searches = Model.Where(s => s.Site == Site.PracujPl).ToList() };

}
<div class="container my-5">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-3">
        <div class="card-body text-center bg-gradient position-relative py-4"
            style="background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);">
            <h3 class="fw-bold text-uppercase mb-2 text-shadow">Your Searches</h3>
            <p class="mb-0 small opacity-75">
                These are your saved automated job searches. They update automatically to help you find new openings.
            </p>
        </div>
    </div>





    <div class="row">
        <div class="col-12 mb-4">

            @await Html.PartialAsync("SearchSection/_SearchSection", glassDoorModel)
            @await Html.PartialAsync("SearchSection/_SearchSection", indeedModel)
            @await Html.PartialAsync("SearchSection/_SearchSection", praculPlModel)
        </div>

        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Scheduled Reports
                </div>
                <div class="card-body">
                    @await Component.InvokeAsync("ReportScheduler")
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-shadow {
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4);
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
    }
</style>
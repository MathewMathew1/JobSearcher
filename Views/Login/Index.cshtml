@{
    ViewData["Title"] = "Login Page";
}

<div class="container pb-5">
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body text-center text-white py-4"
             style="background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);">
            <h2 class="fw-bold text-uppercase text-shadow mb-2">Hello</h2>
            <p class="small opacity-75 mb-0">
                Login to access your personalized job searches, reports, and recommendations.
            </p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
                <h4 class="fw-semibold mb-4 text-primary text-center">Sign In</h4>

                <form asp-controller="Login" asp-action="Login" method="post" class="text-center">
                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-google me-2"></i>Login with Google
                    </button>
                </form>

                <hr class="my-4">

                <div class="text-center small text-muted">
                    By logging in, you can:
                </div>
                <ul class="list-group list-group-flush mt-3">
                    <li class="list-group-item d-flex align-items-center border-0">
                        <i class="bi bi-speedometer2 text-primary me-2"></i>
                        Access automated job search reports
                    </li>
                    <li class="list-group-item d-flex align-items-center border-0">
                        <i class="bi bi-journal-text text-primary me-2"></i>
                        Save and manage multiple job searches across platforms
                    </li>
                    <li class="list-group-item d-flex align-items-center border-0">
                        <i class="bi bi-envelope-check text-primary me-2"></i>
                        Receive notifications of new job opportunities in your inbox
                    </li>
                    <li class="list-group-item d-flex align-items-center border-0">
                        <i class="bi bi-bar-chart text-primary me-2"></i>
                        Analyze job descriptions against your CV for better matching
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
.text-shadow {
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4);
}

.card:hover {

    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
}
</style>

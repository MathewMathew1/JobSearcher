@model JobSearcher.Account.UserInDatabase?

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
  <div class="container-fluid">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">JobSearcher</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
      <ul class="navbar-nav flex-grow-1">
        <li class="nav-item align-items-center d-flex">
          <a class="nav-link  @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
            asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item align-items-center d-flex">
          <a class="nav-link  @(ViewContext.RouteData.Values["controller"]?.ToString() == "Job" ? "active" : "")"
            asp-controller="Job" asp-action="Index">Job Searches</a>
        </li>
        <li class="nav-item">
          @if (Model != null)
          {
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button"
              data-bs-toggle="dropdown" aria-expanded="false">
              <img src="@Model.ProfilePicture" alt="Profile" class="rounded-circle me-2"
                style="width:32px; height:32px; object-fit:cover;">
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li>
                <h6 class="dropdown-header">@Model.Name</h6>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>
              <li>
                <a class="dropdown-item" asp-controller="UserJobSearcher" asp-action="Index">Job Searcher</a>
              </li>
                  <li>
                <a class="dropdown-item d-flex justify-content-between align-items-center @(ViewContext.RouteData.Values["controller"]?.ToString() == "UserReport" ? "active" : "")"
                  asp-controller="UserReport" asp-action="Index">
                  Reports
                  @{
                    var unseenCount = Model.UserReports.Count(r => !r.SeenByUser);
                    if (unseenCount > 0)
                    {
                      <span class="badge rounded-pill bg-danger ms-2">
                        @unseenCount
                      </span>
                    }
                  }
                </a>
              </li>
              <li><a class="dropdown-item" asp-controller="Login" asp-action="Logout">Logout</a></li>
        
            </ul>
          </li>
        }
        else
        {
          <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Login" ? "active" : "")"
            asp-controller="Login" asp-action="Index">Login</a>
        }
        </li>
      </ul>
    </div>
  </div>
</nav>
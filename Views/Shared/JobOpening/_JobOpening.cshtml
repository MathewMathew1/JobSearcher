@using JobSearcher.Job
@model JobInfo

<li class="job-item d-flex flex-column flex-md-row align-items-start mb-3 p-3 border rounded shadow-sm">
    <div class="job-text me-md-3 mb-2 mb-md-0 flex-grow-1">
        <a href="@Model.Link" target="_blank" rel="noopener noreferrer">
            <strong class="job-name">@Model.Name</strong>
        </a>
        <p class="job-description mb-1">@Model.Description</p>

        @if (!string.IsNullOrEmpty(Model.ExtensiveDescription))
        {
            <div class="accordion mt-2" id="accordion-@Model.Name.GetHashCode()">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-@Model.Name.GetHashCode()">
                        <button class="accordion-button collapsed p-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@Model.Name.GetHashCode()" aria-expanded="false" aria-controls="collapse-@Model.Name.GetHashCode()">
                            Show Full Description
                        </button>
                    </h2>
                    <div id="collapse-@Model.Name.GetHashCode()" class="accordion-collapse collapse" aria-labelledby="heading-@Model.Name.GetHashCode()" data-bs-parent="#accordion-@Model.Name.GetHashCode()">
                        <div class="accordion-body p-2" style="white-space: pre-wrap; font-size: 0.9rem;">
                            @Model.ExtensiveDescription
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</li>
